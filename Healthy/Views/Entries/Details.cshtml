@model Healthy.Models.Entry

@{
    ViewData["Title"] = "Details";
}
<div class="head">
<h1>Details</h1>
</div>

<div class="detailsList">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MealType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MealType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @FormatValue(Model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Food)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Food.Name)
        </dd>
        <dt class = "col-sm-2">
            Food Calories
        </dt>
        <dd class = "col-sm-10">
            @FormatValue(Model.Food.Calories)
        </dd>
        <dt class = "col-sm-2">
            Food Fat
        </dt>
        <dd class = "col-sm-10">
            @FormatValue(Model.Food.Fat)
        </dd>
        <dt class = "col-sm-2">
            Food Carbs
        </dt>
        <dd class = "col-sm-10">
            @FormatValue(Model.Food.Carbs)
        </dd>
        <dt class = "col-sm-2">
            Food Protein
        </dt>
        <dd class = "col-sm-10">
            @FormatValue(Model.Food.Protein)
        </dd>
        <dt class = "col-sm-2">
             Total Calories
        </dt>
        <dd class = "col-sm-10">
            @FormatValue(Model.Food.Calories * Model.Quantity)
        </dd>
        <dt class = "col-sm-2">
             Total Fat
        </dt>
        <dd class = "col-sm-10">
            @FormatValue(Model.Food.Fat * Model.Quantity)
        </dd>
        <dt class = "col-sm-2">
             Total Carbs
        </dt>
        <dd class = "col-sm-10">
            @FormatValue(Model.Food.Carbs * Model.Quantity)
        </dd>
        <dt class = "col-sm-2">
             Total Protein
        </dt>
        <dd class = "col-sm-10">
            @FormatValue(Model.Food.Protein * Model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IntakeTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IntakeTime)
        </dd>
    </dl>
</div>
<div class="tableButtons">
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
@functions {
    public string FormatValue(double value)
    {
        return value % 1 == 0 ? value.ToString("0") : value.ToString("0.##");
    }
}
