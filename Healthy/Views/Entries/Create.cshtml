@model Healthy.Models.Entry

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MealType" class="control-label"></label>
                <select asp-for="MealType" class="form-control">
                    <option value="">Select Meal Type</option>
                    @foreach (var mealType in Enum.GetValues(typeof(Healthy.Models.MealType)))
                    {
                        <option value="@mealType">@mealType</option>
                    }
                </select>
                <span asp-validation-for="MealType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ate" /> @Html.DisplayNameFor(model => model.Ate)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodId"></label>
                <select asp-for="FoodId" class="form-control">
                    <option value="">Select Food</option>
                    @foreach (var item in ViewBag.FoodList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="FoodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntakeTime" class="control-label"></label>
                <input asp-for="IntakeTime" class="form-control" type="time" />
                <span asp-validation-for="IntakeTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
