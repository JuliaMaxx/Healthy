@model Healthy.Models.Entry

@{
    ViewData["Title"] = "Create";
}
<head>
    <link href="./css/styles.css" rel="stylesheet" />
</head>
<div class="head centered">
    <div class="subhead centered">
        <h1>Create</h1>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MealType" class="control-label"></label>
                <select asp-for="MealType" class="form-control">
                    <option value="">Select Meal Type</option>
                    @foreach (var mealType in Enum.GetValues(typeof(Healthy.Models.MealType)))
                    {
                        <option value="@mealType">@mealType</option>
                    }
                </select>
                <span asp-validation-for="MealType" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="Ate" /> @Html.DisplayNameFor(model => model.Ate)
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodId"></label>
                <select asp-for="FoodId" class="form-control">
                    <option value="">Select Food</option>
                    @foreach (var item in ViewBag.FoodList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
                <span asp-validation-for="FoodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IntakeTime" class="control-label"></label>
                <input asp-for="IntakeTime" class="form-control" type="time" />
                <span asp-validation-for="IntakeTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="saveButton">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="tableButtons">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
