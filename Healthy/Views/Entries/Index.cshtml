@model IEnumerable<Healthy.Models.Entry>

@{
    ViewData["Title"] = "Index";
}

<h1>Today's Entries</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Food
            </th>
            <th>
                Meal Type
            </th>
            <th>
                Quantity
            </th>
            <th>
                Ate
            </th>
            <th>
                Calories
            </th>
            <th>
                Fats
            </th>
            <th>
                Carbs
            </th>
            <th>
                Protein
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Food.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MealType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <form asp-action="ToggleAte" method="post" id="form-@item.Id">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="checkbox" name="ate" value="true" @(item.Ate ? "checked" : "") onchange="document.getElementById('form-@item.Id').submit();" />
                    </form>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Food.Calories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Food.Fat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Food.Carbs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Food.Protein)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



