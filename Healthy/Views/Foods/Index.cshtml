@model IEnumerable<Healthy.Models.Food>

@{
    ViewData["Title"] = "Index";
    @functions {
        public string FormatValue(double value)
        {
            return value % 1 == 0 ? value.ToString("0") : value.ToString("0.##");
        }
    }
}
<div class="head">
    <h1>Food</h1>

    <p class="createButton">
        <a asp-action="Create">Create New</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr class="table">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carbs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Protein)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderBy(f => f.Name))
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="values">
                @Html.DisplayFor(modelItem => item.Reference)
            </td>
            <td class="values">
                    @FormatValue(item.Calories)
            </td>
            <td class="values">
                    @FormatValue(item.Fat)
            </td>
            <td class="values">
                    @FormatValue(item.Carbs)
            </td>
            <td class="values">
                    @FormatValue(item.Protein)
            </td>
                <td class="tableButtons">
                <b>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </b>
            </td>
        </tr>
}
    </tbody>
</table>